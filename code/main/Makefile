# Makefile f端r das GTK-Projekt

CC = gcc
CFLAGS = `pkg-config --cflags gtk+-3.0`
LDFLAGS = `pkg-config --libs gtk+-3.0`
SRC = main.c  # Deine C-Datei
OUT = maze_game  # Name der ausf端hrbaren Datei

# Standardziel
all: $(OUT)

# Erzeugung der ausf端hrbaren Datei
$(OUT): $(SRC)
	$(CC) $(SRC) -o $(OUT) $(CFLAGS) $(LDFLAGS)

# Ziel zum Bereinigen
clean:
	rm -f $(OUT)

# Ziel f端r den automatischen Build (optional)
.PHONY: all clean

