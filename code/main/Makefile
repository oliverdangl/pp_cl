# Makefile f端r das GTK-Projekt

CC = gcc
CFLAGS = `pkg-config --cflags gtk+-3.0 cairo`
LDFLAGS = `pkg-config --libs gtk+-3.0 cairo`
SRC = main.c  # Alle Quellcode-Dateien
OBJ = $(SRC:.c=.o)
OUT = maze_game  # Name der ausf端hrbaren Datei

# Standardziel
all: $(OUT)

# Erzeugung der ausf端hrbaren Datei
$(OUT): $(OBJ)
	$(CC) $(OBJ) -o $(OUT) $(LDFLAGS)

# Kompilieren der Objektdateien
%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

# Ziel zum Bereinigen
clean:
	rm -f $(OUT) $(OBJ)

# Ziel f端r den automatischen Build (optional)
.PHONY: all clean
